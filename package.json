{
  "name": "mobilesandbox-poweredup",
  "version": "1.0.0",
  "description": "A Javascript module to interface with LEGO Powered Up components.",
  "homepage": "https://github.com/TobiasKarl/Node-poweredup-new/",
  "main": "dist/node/index-node.js",
  "types": "dist/node/index-node.d.ts",
  "scripts": {
    "build:node": "tsc",
    "build:browser": "webpack --mode=production",
    "build:all": "npm run build:node && npm run build:browser",
    "lint": "tslint -c tslint.json \"./src/**/*.ts\"",
    "build": "npm run lint && npm run build:all",
    "docs": "jsdoc -c .jsdoc.json",
    "all": "npm run build && npm run docs",
    "prepublishOnly": "npm run lint && npm run build:node"
  },
  "author": "Tobias Carlsson <tobias.carlsson@br-automation.com>",
  "license": "MIT",
  "dependencies": {
    "@abandonware/noble": "1.9.2-14",
    "compare-versions": "^3.6.0",
    "debug": "^4.3.2"
  },
  "devDependencies": {
    "@types/debug": "4.1.7",
    "@types/node": "^16.7.6",
    "@types/web-bluetooth": "0.0.11",
    "buffer": "^6.0.3",
    "jsdoc": "^3.6.7",
    "jsdoc-to-markdown": "^7.0.1",
    "ts-loader": "^9.2.5",
    "tslint": "^6.1.3",
    "typescript": "^4.4.2",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0"
  },
  "directories": {
    "doc": "docs",
    "example": "examples"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TobiasKarl/Node-poweredup-new.git"
  },
  "bugs": {
    "url": "https://github.com/TobiasKarl/Node-poweredup-new/issues"
  }
}
